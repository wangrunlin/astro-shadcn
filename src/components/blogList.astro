---
import { getCollection } from "astro:content";
// todo: import markdown css

const allBlogPosts = await getCollection("blog");
---

{
  allBlogPosts.map((post: any) => (
    <div class="my-4">
      <h3 class="text-xl font-bold my-4">
        <a class="hover:underline" href={`/posts/${post.slug}`}>
          {post.data.title}
        </a>
      </h3>
      <p class="text-gray-600">{post.data.description}</p>
    </div>
  ))
}
